<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/recyclerlist"    android:layout_height="wrap_content"    app:behavior_hideable="false"    app:behavior_peekHeight="46dp"    android:background="#fff"    android:theme="@style/AppTheme"    android:layout_gravity="bottom"    android:animateLayoutChanges="true"    android:layout_weight="4"    tools:context=".StickerPackListActivity"    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"    tools:showIn="@layout/activity_sticker_pack_list">    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:padding="20dp"        android:textColor="@android:color/holo_red_dark"        android:id="@+id/error_message" />    <android.support.v7.widget.RecyclerView        android:id="@+id/sticker_pack_list"        android:layout_width="match_parent"        android:theme="@style/GridTheme"        android:layout_height="wrap_content"        android:padding="5px"/></RelativeLayout>